			cout <<BOLDRED<< "error: invalid input!"<<RESET;
			cin.clear();
			cin.ignore(numeric_limits<streamsize>::max(), '\n');
		}
		if(dec ==1){
			one.adjoint().print_matrix(); 
			cout<<"\n\n";
		}else if( dec ==2){
			two.adjoint().print_matrix(); 
