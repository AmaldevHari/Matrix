#include "Matrix.h"

Matrix main_loop_matrix_init(){

	float in ;

			float* mat;
		row_col_init:	int row; int col;

			cout<<"Enter number of rows and coloumns in order: "<<"\n";

			if(!(cin>> row)){
				cout<<"error:invalid input";
				delete(row);delete(col);
				goto row_col_init;
			}if(!(cin>> row)){
				cout<<"error:invalid input";
				delete(row);delete(col);
				goto row_col_init;
			}

			array_inputs:int it= row*col;
			mat = new float[it];

			cout<<"Enter number of rows and coloumns in order: "<<"\n";


			for( int i=0;i <it; i++){
				if(!(cin>>mat[i])){
					cout<<"error:invalid input";
					delete(mat);
					delete(it);
					goto array_inputs;
				}
			}

			Matrix m(mat, row, col);
			return m;
}


int main(int argc, char* argv[]){



	Matrix x ;
	x=x.generate_random_matrix(4,4,51.0,true, false);
	x.print_matrix();
	Matrix m= x.inverse();

	cout<<"\n";
	m.print_matrix();
	cout<<"\n";
	(m* x).print_matrix();
	cout<<"\n";
	if(m.equal(x)){cout<<"yes";}
	else{cout<<"no";}

	while( true){

		cout<<"Create Matrix 1: "<<"\n";
		Matrix one=main_loop_matrix_init();
		char decision;
		cout<<"do you want to create a second matrix? Enter y or n"<<"\n";

		Matrix two;

		if(decision == 'y'){

			two = main_loop_matrix_init();
		}

		while(true){

			cout<<" What would you like to do "

		}

		cout<<"would you like to exit? Enter y or n"<<"\n";

		cin>>decision;
		if(decision == 'y'){
			return 0;
		}

	}
	return 0;
}
